<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= smoothie.name %></title>
    <link rel="stylesheet" href="/stylesheet/main.css">
</head>
<body>
    <section>
        <%- include('../partial/nav.ejs') %>
    </section>
    <section>
      <% if (user && smoothie.author.equals(user._id)) { %>
          <div class="controls">
            <a class="edit-btn" href="/smoothies/<%= smoothie._id %>/edit">‚úçÔ∏è</a>
            <form action="/smoothies/<%= smoothie._id %>?_method=DELETE" method="POST">
              <button class="delete-btn" type="submit">üóëÔ∏è</button>
            </form>
          </div>
        <% } else { %>
          <p>You do not have permission to edit or delete this smoothie.</p>
        <% } %>
        <div class="smoothie">
            <h1><%= smoothie.name %></h1>
            <h1>$<%= smoothie.price %></h1>
            <p><%= smoothie.description %></p>
            <ul class="ingredients">
              <% smoothie.ingredients.forEach(ingredient => { %>
                <li><%= ingredient %></li>
              <% }); %>
            </ul>
    </section>

</body>
</html>